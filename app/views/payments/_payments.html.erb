  <div class="box-header text-center">
    <h2 class="box-title m-10">LIST OF Outgoing Payments</h2>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <%#= render_search_and_new_btn(Event.filter_fields, events_path, new_event_path, 'Create New Event', false) %>
    <table id="dttb" class="table table-bordered table-hover">
      <thead>
      </tr>
      <tr>
        <th>No</th>
        <th>Organizer</th>
        <th>Price</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
      </thead>
      <tbody>
      <%= render partial: :payment, collection: @payments %>
      </tbody>
    </table>
    <%= paginate(@payments, remote: true) %>
  </div>
