<%= form_tag payments_path, method: :get do %>
    <div class="col-md-12">
      <%#= render_search_and_new_btn(User.filter_fields, users_path, new_user_path, 'Create New User', false) %>
      <div class="form-group col-md-3">
      </div>
      <div class="form-group col-md-3">
        <%= select_tag "user", options_from_collection_for_select(User.organizers, :id, :fullname, params[:user]), include_blank: "All", prompt:"Select an Organizer", class: "form-control select2", style:"width: 100%;"%>
      </div>
      <div class="form-group col-md-2">
        <label>From Date</label>
        <%= text_field_tag "from_date", params[:from_date], class: "form-control datepicker", style:"width: 100%;", readonly: false %>
      </div><div class="form-group col-md-2">
      <label>To Date</label>
      <%= text_field_tag "to_date", params[:to_date], class: "form-control datepicker", style:"width: 100%;", readonly: false %>
    </div>

      <div class="form-group col-md-2">
        <%= submit_tag 'Apply Filters', class:"btn bg-olive btn-flat margind" %>
      </div>

    </div>

    <div class="form-group col-md-12 text-center">
    </div>
<% end %>
