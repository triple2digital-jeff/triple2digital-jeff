<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Payment Details</h3>
  </div>
  <div class='form-horizontal charge'>
    <div class="box-body">
      <div class="col-md-6 col-xs-offset-2">

        <div class="form-group">
          <label class='col-sm-3 control-label'> Amount </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @payment.amount/100 %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Date </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @payment.created_at %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Bank User </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @payment.user&.fullname %></div>
          </div>
        </div>
      </div>
    </div>

    <div class=" box-footer">

    </div>

  </div>
</div>