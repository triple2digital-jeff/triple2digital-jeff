<%= form_tag charges_path, method: :get do %>
    <div class="col-md-12">
      <%#= render_search_and_new_btn(User.filter_fields, users_path, new_user_path, 'Create New User', false) %>
      <div class="form-group col-md-2">
        <label>Select Attendee</label>
        <%= select_tag "user", options_from_collection_for_select(User.attendies, :id, :fullname, params[:user]), include_blank: "All", class: "form-control select2", style:"width: 100%;"%>
      </div>
      <div class="form-group col-md-4">
        <label>Select Event</label>
        <%= select_tag "event", options_from_collection_for_select(Event.all, :id, :title, params[:event]), include_blank: "All", class: "form-control select2", style:"width: 100%;"%>
      </div>
      <div class="form-group col-md-2">
        <label>Select Organizer</label>
        <%= select_tag "owner", options_from_collection_for_select(User.organizers, :id, :fullname, params[:owner]), include_blank: "All", class: "form-control select2", style:"width: 100%;"%>
      </div>
      <div class="form-group col-md-2">
        <label>From Date</label>
        <%= text_field_tag "from_date", params[:from_date], class: "form-control datepicker", style:"width: 100%;", readonly: false %>
      </div><div class="form-group col-md-2">
        <label>To Date</label>
        <%= text_field_tag "to_date", params[:to_date], class: "form-control datepicker", style:"width: 100%;", readonly: false %>
      </div>
    </div>

    <div class="form-group col-md-12 text-center">
      <%= submit_tag 'Apply Filters', class:"btn bg-olive btn-flat margin" %>
    </div>
<% end %>
