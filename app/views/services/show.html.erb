<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Service Details</h3>
  </div>
  <div class='form-horizontal service'>
    <div class="box-body">
      <div class="col-md-6 col-xs-offset-2">

        <div class="form-group">
          <label class='col-sm-3 control-label'> Title </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @service.title %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Duration </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @service.duration.to_s + @service.time_type.to_s %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Note </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @service.note %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Price </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @service.price %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Private </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @service.is_private %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Owner </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @service.owner&.fullname %></div>
          </div>
        </div>
      </div>
    </div>

    <div class=" box-footer">
      <div class="col-md-6 col-xs-offset-2 pull-right">
        <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_service_path(@service), :class => 'btn btn-info' %>
        <%= link_to t('.delete', :default => t("helpers.links.delete")), @service, method: :delete, :class => 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
        <%= link_to t('.back', :default => t("helpers.links.back")), services_path, :class => 'btn btn-default' %>
      </div>
    </div>

  </div>
</div>