<div class="home-main-content">
  <div class="box box-solid collapsed-box">
    <div class="box-header">
      <h3 class="box-title"></h3>
      <div class="box-tools pull-right">
        <button class="btn btn-primary btn-sm" data-widget="collapse"><i class="fa fa-search"></i>Search</button>
      </div>
    </div>
    <div style="display: none;" class="box-body">
      <%= form_with url: events_path, method: :get do |f| %>

          <div class="row">
            <div class="col-md-2">
              <div class="form-group">
                <%= f.label :start_date, :class => 'control-label' %>
                <%= f.text_field :start_date, class: 'form-control datepicker' %>
              </div>
            </div><!-- /.col -->
            <div class="col-md-2">
              <div class="form-group">
                <%= f.label :end_date, :class => 'control-label' %>
                <%= f.text_field :end_date, class: 'form-control datepicker' %>
              </div>
            </div><!-- /.col -->
            <div class="col-md-1">
              <div class="form-group">
                <%= f.label :min_price, :class => 'control-label' %>
                <%= f.text_field :min_price, class: 'form-control' %>
              </div>
            </div><!-- /.col -->
            <div class="col-md-2">
              <div class="form-group">
                <%= f.label :max_price, :class => 'control-label' %>
                <%= f.text_field :max_price, class: 'form-control' %>
              </div>
            </div><!-- /.col -->
            <div class="col-md-1">
              <div class="form-group">
                <label class="control-label">&nbsp;</label>
                <%= f.submit 'Filter', :class => 'btn btn-info' %>
              </div>
            </div><!-- /.col -->

          </div><!-- /.row -->
    <% end %>
    </div><!-- /.box-body -->
  </div><!-- /.box -->

  <div class="box">
    <div class="box-header text-center">
      <h2 class="box-title m-10">LIST OF EVENTS</h2>
    </div>



    <!-- /.box-header -->
    <div class="box-body">
      <%#= render_search_and_new_btn(Event.filter_fields, users_path, new_event_path, 'Create New Event', false) %>
      <table id="dttb" class="table table-bordered table-hover">
        <thead>
        </tr>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Price</th>
          <th>Status</th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: :event, collection: @events %>
        </tbody>
      </table>
      <%= paginate @events %>
    </div>
  </div>
</div>
