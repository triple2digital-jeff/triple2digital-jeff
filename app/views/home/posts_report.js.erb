var newDataObject = {
    labels: <%= raw (Date.parse(@posts_from).upto(Date.parse(@posts_to))).map{ |date| date.strftime("%b %d") } %>,
    datasets: [{
        label: '# of Posts',
        data: <%= @posts_data %>,
        backgroundColor: [
            'rgba(255, 99, 132, 0.2)'
        ],
        borderColor: [
            'rgba(255, 99, 132, 1)'
        ],
        borderWidth: 1
    }]
};
postsChart.data = newDataObject;
window.postsChart.update();