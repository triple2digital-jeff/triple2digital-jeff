<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Service Details</h3>
  </div>
  <div class='form-horizontal report_post'>
    <div class="box-body">
      <div class="col-md-6 col-xs-offset-2">

        <div class="form-group">
          <label class='col-sm-3 control-label'> Post ID </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @report_post.post_id %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Posted By </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @report_post.post&.user&.fullname %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Reported By </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @report_post&.user&.fullname %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Post Content </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @report_post.post&.description %></div>
          </div>
        </div>
        <div class="form-group">
          <label class='col-sm-3 control-label'> Reporter's Comments </label>
          <div class="col-sm-9">
            <div class='form-control'><%= @report_post&.description %></div>
          </div>
        </div>
      </div>
    </div>

    <div class=" box-footer">
      <div class="col-md-6 col-xs-offset-2 pull-right">
        <%#= link_to t('.edit', :default => t("helpers.links.edit")), edit_report_post_path(@report_post), :class => 'btn btn-info' %>
        <%= link_to 'Delete Post', @report_post, method: :delete, :class => 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
        <%= link_to t('.delete', :default => t("helpers.links.delete")), @report_post, method: :delete, :class => 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
        <%= link_to t('.back', :default => t("helpers.links.back")), report_posts_path, :class => 'btn btn-default' %>
      </div>
    </div>

  </div>
</div>