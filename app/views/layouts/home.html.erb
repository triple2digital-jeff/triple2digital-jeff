<!DOCTYPE html>
<html>
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <base href="/">
  <title>Profiler</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

  <%= stylesheet_link_tag    'home', media: 'all' %>
  <%= javascript_include_tag 'home' %>
  <!-- Google Font -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <%= render 'layouts/main_header' %>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <%= render 'layouts/main_sidebar' %>
    <!-- /.sidebar -->
  </aside>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>Control panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
      </ol>

      <% if notice %>

          <p class="notice alert alert-info text-center alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <%= notice %>
          </p>
      <% end %>
      <% if alert %>
          <p class="alert alert-danger text-center alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <%= alert %>
          </p>
      <% end %>

    </section>

    <!-- Main content -->
    <%#= render 'layouts/top_content' %>
    <!-- /.content -->
    <!-- Main row -->
    <section class="content">
      <div class="row">
        <!-- Left col -->
        <section class="col-lg-12 connectedSortable">
          <%= yield %>
        </section>
      </div>
    </section>
    <!-- /.row (main row) -->
  </div>
  <!-- /.content-wrapper -->
  <%= render 'layouts/footer' %>

  <!-- Control Sidebar -->
  <%= render 'layouts/side_settings' %>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <!--<div class="control-side*= require_tree .*= require_self*/bar-bg"></div>-->
</div>

</body>
</html>
