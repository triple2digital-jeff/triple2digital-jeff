<div class="col-md-3">

  <!-- Profile Image -->
  <div class="box box-primary">
    <div class="box-body box-profile">
      <%= image_tag(user_profile_picture(@user), class: 'profile-user-img img-responsive img-circle')%>
      <h3 class="profile-username text-center"><%= @user.fullname %></h3>

      <!--<p class="text-muted text-center">Phone: <%#= @user.phone %></p>-->
      <p class="text-muted text-center">Member Since: <%= @user.created_at.to_date %></p>

      <ul class="list-group mb-5 list-group-unbordered">
        <li class="list-group-item">
          <%=link_to '<b>User Details</b>'.html_safe, @user %>
        </li>
        <li class="list-group-item">
          <%=link_to '<b>Services</b>'.html_safe, services_path(user_id: @user.id), remote: true %>
        </li>
        <li class="list-group-item">
          <%=link_to '<b>Events</b>'.html_safe, events_path(user_id: @user.id), remote: true %>
        </li>
        <li class="list-group-item">
          <%=link_to '<b>Posts</b>'.html_safe, posts_path(user_id: @user.id), remote: true %>
        </li>
        <li class="list-group-item">
          <%=link_to '<b>Bank Payments</b>'.html_safe, payments_path(user_id: @user.id), remote: true %>
        </li>
        <!--<li class="list-group-item">-->
          <!--<%#=link_to '<b>Event Charges</b>'.html_safe, charges_path(user: @user.id), remote: true %>-->
        <!--</li>-->
      </ul>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->


</div>




<div class="col-md-9">

  <!-- Profile Image -->
  <div id="user_detail_box" class="box box-primary">
    <%= render partial: 'user_detail' %>
  </div>
  <!-- /.box-body -->
</div>